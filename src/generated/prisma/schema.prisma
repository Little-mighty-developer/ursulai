generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(uuid())
  email      String     @unique
  // ...other user fields
  activities Activity[]
}

model Activity {
  id       String   @id @default(uuid())
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  date     DateTime
  checkin  Boolean  @default(false)
  mood     Boolean  @default(false)
  reminder Boolean  @default(false)
  journal  Boolean  @default(false)
}

model Engagement {
  id       String   @id @default(uuid())
  userId   String
  date     DateTime
  checkin  Boolean  @default(false)
  mood     Boolean  @default(false)
  reminder Boolean  @default(false)
  journal  Boolean  @default(false)

  @@unique([userId, date]) // Each user can have only one engagement per day
}

model MoodEntry {
  id        Int      @id @default(autoincrement())
  userId    String
  moodType  String
  value     Int
  createdAt DateTime @default(now())
}
